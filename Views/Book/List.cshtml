@model IEnumerable<XML_Lab_5_1.Models.Book>
@{
    ViewData["Title"] = "List";
}

<h1>Book List</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Book Title</th>
            <th>Author Title</th>
            <th>Author First name</th>
            <th>Author Middle name</th>
            <th>Author Last name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
        <tr>
            <td>@Html.DisplayFor(m => item.BookID)</td>
            <td>@Html.DisplayFor(m => item.Title)</td>
            <td>@Html.DisplayFor(m => item.AuthorTitle)</td>
            <td>@Html.DisplayFor(m => item.FirstName)</td>
            <td>@Html.DisplayFor(m => item.MiddleName)</td>
            <td>@Html.DisplayFor(m => item.LastName)</td>
        </tr>
        }
    </tbody>
</table>
